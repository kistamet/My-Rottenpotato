%h1 All Movies  
%div
  - if @current_user 
    %h1= current_user.name
    = link_to 'Log_out' , sign_out_path  

  - else 
    = link_to 'Login' , login_path  




%table#movies
  %thead
    %tr
      %th number
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info

  %tbody
    - @movies.order('title').each_with_index do |movie, index|
      %tr
        %td= index+1
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

- if @current_user     
  = link_to 'Add new movie ', new_movie_path  




