%h1 All Movies  
%div
  - if @current_user 
    %h1= current_user.name
    = link_to 'Log_out' , sign_out_path  

  - else 
    = link_to 'Login' , login_path  




%table#movies
  %thead
    %tr
      %th number
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info

  %tbody
    - @movies.order('title').each_with_index do |movie, index|
      %tr
        %td= index+1
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

- if @current_user     
  %div{class: "row"}      
    %p{class: "column",:style=>"text-align:left;"}= link_to 'Add new movie', new_movie_path
    %p{class: "column",:style=>"text-align:right;"}= link_to 'Delete all movies', all_destroy_path , :method => "post"

%h1 Search TMDb for a movie

= form_tag :action => 'search_tmdb' do
  <label for='search_terms'>Search Terms</label>
  <input id="search_terms" name="search_terms" type="text" />
  = submit_tag 'Search TMDb' 


